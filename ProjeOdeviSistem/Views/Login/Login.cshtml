@model User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<div class="container">
    @if (ViewBag.err != null)
    {
        <div class="alert alert-danger">@ViewBag.err</div>
    }
    

    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            @Html.TextBoxFor(model => model.email, "", new {@class="form-control", @required = "" })
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            @Html.TextBoxFor(model => model.password, "", new { @class = "form-control", @required = "", @type="password" })
        </div>

        <button type="submit" class="btn btn-primary" value="@Context.Request.Query["ReturnUrl"]">Submit</button>

    }

</div>