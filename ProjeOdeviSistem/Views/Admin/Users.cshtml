
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sisteme Kayıtlı kullanıcılar</h1>

@if (ViewBag.kullanicilar != null)
{
    <div class="row">

        @foreach (var item in ViewBag.kullanicilar)
        {

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">AD: @item.name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">ID: @item.Id</h6>
                    <h6 class="card-subtitle mb-2 text-muted">E-mail: @item.email</h6>
                    <p class="card-text">ADRES: @item.adress</p>
                    <p class="card-text">Şehir: @item.city</p>
                </div>
            </div>
        }
    </div>

}
else
{
    <div class="card">
        <div class="card-body alert-info">
            Sistemde kayıtlı kullanıcı yok.
        </div>
    </div>
}

